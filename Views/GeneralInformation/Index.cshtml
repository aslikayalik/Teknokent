@model IEnumerable<GeneralInformation>

@{
    ViewData["Title"] = "Index";
}

<h1>Genel Bilgi Listesi</h1>

<p>
    <a asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GIName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GIContent)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GIName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GIContent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
           
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
