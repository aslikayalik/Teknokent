@model Legislation

@{
    ViewData["Title"] = "Delete";
}

<h1>Mevzuat Silme Sayfası</h1>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Mevzuat</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LegislationName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LegislationName)
        </dd>


         @if (!string.IsNullOrEmpty(Model.FilePath))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Link)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Link)
            </dd>
        }


        @if (!string.IsNullOrEmpty(Model.FilePath))
                    {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FilePath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilePath)
        </dd>
                    }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye dön</a>
    </form>
</div>
