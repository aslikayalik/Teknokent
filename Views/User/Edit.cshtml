@model ApplicationUser
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2>Yetkili Bilgileri Düzenleme Sayfası</h2>
        <hr />
    </div>

    <div class="row">
        <div class="col-md-8">
            <form method="post" asp-action="Edit">
                <div class="row">
                    <div class="col-md-6">
                        <input asp-for="@Model.Id" hidden />



                        <div class="form-group">
                            <label asp-for="Name">Ad</label>
                            <input asp-for="Name" class="form-control" oninput="capitalizeFirstWord(this)" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Soyad</label>
                            <input asp-for="LastName" class="form-control" oninput="toUpperCase(this)" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" readonly class="form-control" />
                            <input asp-for="Email" hidden />
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="col-md-2">Telefon</label>
                            <div class="col-md-10">
                                <input asp-for="PhoneNumber" class="form-control" oninput="toUpperCase(this)" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company" class="col-md-2">Şirket</label>
                            <div class="col-md-10">
                                <input asp-for="Company" class="form-control" oninput="toUpperCase(this)" />
                                <span asp-validation-for="Company" class="text-danger"></span>
                            </div>
                        </div>

                    


                        <div class="form-group">
                            <label asp-for="RoleId">Yetki</label>
                            <select asp-for="RoleId" asp-items="@Model.RoleList" class="form-control">
                                <option disabled selected>--Rol Seçiniz--</option>
                            </select>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width:150px">Kaydet</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width:auto">
                        Kullanıcı Listesine Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>