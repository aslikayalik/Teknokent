@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link ">
                      Çıkış Yap
                </button>
            </form>
        </li>

        <li class="nav-item">
            <a id="manage" class="nav-link " asp-controller="Account" asp-action="Index">@UserManager.GetUserName(User)</a>
        </li>
    }
</ul>
